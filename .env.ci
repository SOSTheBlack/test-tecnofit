APP_NAME=TecnoFitPix
APP_ENV=testing
APP_DEBUG=false
APP_TIMEZONE=America/Sao_Paulo

# Database configuration for CI
DB_DRIVER=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=tecnofit_pix_test
DB_USERNAME=root
DB_PASSWORD=root

# Redis configuration for CI
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_AUTH=
REDIS_DB=0

# Cache configuration
CACHE_DRIVER=array
CACHE_PREFIX=tecnofit_pix_ci_

# Queue configuration
QUEUE_CONNECTION=sync

# Mail configuration
MAIL_MAILER=array
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@tecnofit.local
MAIL_FROM_NAME="TecnoFit PIX"

# JWT (can be a simple test key for CI)
JWT_SECRET=test_jwt_secret_key_for_ci_only

# PIX Provider Mock (for CI tests)
PIX_PROVIDER_URL=http://localhost:9501/api/mock/pix
PIX_PROVIDER_TOKEN=mock_token_for_ci_tests

# Logs
LOG_LEVEL=error
